<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recipie Results.</title>
</head>

<body>
  <main>
    <!-- Top Nav -->
    <nav>
      <ul>
        <a href="/">
          <li>Food For Now</li>
        </a>
        <!-- Search will be hidden on the Home page: index.ejs -->
        <a href="/">
          <li>Search</li>
        </a>
        <a href="/foodforlater">
          <li>My List</li>
        </a>
      </ul>
    </nav>

    <section>
      <!-- Recipe Cards -->
      <% results.forEach(recipe => { %>
        <article>
          <img src="<%= recipe.image_url %>"/>
          <h2><%= recipe.label %></h2>
          <h4>Ingredients</h4>
          <ul>
            <% recipe.ingredientLines.forEach(ingredient => { %>
            <li><%= ingredient %></li>
            <% }); %>
          </ul>
        </article>
      <% }); %>
    </section>

    <!-- Footer -->
    <footer>
      <ul>
        <li>Food For Now &copy; 2020</li>
        <li>Built by: Cavendish Bananas</li>`
      </ul>
    </footer>
  </main>
</body>
</html>